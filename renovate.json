{
  "extends": [
    "config:base"
  ],
  "timezone": "Asia/Tokyo",
  "enabledManagers": [
    "npm"
  ],
  "rangeStrategy": "bump",
  "ignoreDeps": ["npm"],
  "packageRules": [
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "groupName": "dependencies"
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "groupName": "devDependencies"
    },
    {
      "packageNames": [
        "node"
      ],
      "enabled": false
    }
  ]
}
